rofi.color-enabled: true

! State:           'bg',     'fg',     'bgalt',  'hlbg',   'hlfg'
rofi.color-normal: #101218,  #a1a4b0,  #101218,  #101218,  #9575cd
rofi.color-urgent: #101218,  #a1a4b0,  #101218,  #101218,  #9575cd
rofi.color-active: #101218,  #a1a4b0,  #101218,  #101218,  #9575cd

!                  'background', 'border'
rofi.color-window: #101218,      #101218

rofi.lines: 3
rofi.eh: 2
rofi.line-margin: 15
rofi.padding: 40
rofi.opacity: 90
rofi.bw: 0

! rofi.fullscreen: true
! rofi.font: System San Francisco Display 16

! --- Terminal fonts ---
XTerm*faceName: Monaco:size=8:antialias=true
XTerm*renderFont: true
XTerm*scaleHeight: 1.2
Xft.rgba: rgb

! special
*.foreground:   #ABB2BF
*.background:   #282C34
*.cursorColor:  #abb2bf

! black
*.color0:   #282C34
*.color8:   #282C34

! red
*.color1:       #E06C75
*.color9:       #E06C75

! green
*.color2:      #98C379
*.color10:      #98C379

! yellow
*.color3:      #D19A66
*.color11:      #D19A66

! blue
*.color4:      #61AEEE
*.color12:      #61AEEE

! magenta
*.color5:      #C678DD
*.color13:      #C678DD

! cyan
*.color6:      #56B6C2
*.color14:      #56B6C2

! white
*.color7:       #ABB2BF
*.color15:      #FFFFFF
